---
import { reactive } from 'astro/types';
let activeImage = reactive(1);
---

<div class="relative lg:col-span-6 my-8"> 			
    <!-- Image 1 -->
    <div class={`${$activeImage !== 1 ? 'hidden' : ''} sm:hidden`}>
        <img class="w-full" src="../../public/images/homepage/family-gathering-mobile.jpg" alt="Family Gathering">
    </div>
    <div class={`${$activeImage !== 1 ? 'hidden' : ''} hidden sm:block md:hidden`}>
        <img class="w-full" src="../../public/images/homepage/family-gathering-tablet.jpg" alt="Family Gathering">
    </div>
    <div class={`${$activeImage !== 1 ? 'hidden' : ''} hidden md:block`}>
        <img class="w-full" src="../../public/images/homepage/family-gathering-desktop.jpg" alt="Family Gathering">
    </div>

    <!-- ... [similar code for Image 2 and Image 3] -->

    <!-- Buttons -->
    <div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 space-x-4">
        <button @click={() => $activeImage = 1} class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">Image 1</button>
        <button @click={() => $activeImage = 2} class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">Image 2</button>
        <button @click={() => $activeImage = 3} class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">Image 3</button>
    </div>
</div>
