---
const { imageUrl, imageUrlMedium, imageUrlLarge, title, desc } = Astro.props;
---

<div class="flex flex-col md:flex-row gap-8">
    <div>
        <img 
            srcset={`${imageUrl} 400w, ${imageUrlMedium} 800w, ${imageUrlLarge} 1200w`}
            sizes="(max-width: 640px) 400px, (max-width: 1024px) 800px, 1200px"
            src={imageUrl} 
            alt={title} 
            class="w-full">
    </div>
    <div class="flex flex-col gap-4 text-center md:text-left md:my-auto">
        <p class="text-xl font-bold">{title}</p>
        <p>{desc}</p>
    </div>
</div>
